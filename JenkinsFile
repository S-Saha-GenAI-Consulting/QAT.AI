pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Debug Checkout') {
            steps {
                sh '''
                echo "Debugging repository contents:"
                ls -la
                '''
            }
        }
        stage('Install JDK-17') {
            steps {
                sh '''
                export JAVA_HOME=/Users/sayantansaha/Downloads/jdk-17.0.12.jdk/Contents/Home
                '''
            }
        }
        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }
        stage('Re-Checkout SCM') { // Add this stage to restore files after cleaning
            steps {
                checkout scm
            }
        }
        stage('Debug Workspace') {
            steps {
                sh '''
                echo "Listing workspace contents:"
                ls -la
                '''
            }
        }
        stage('Run Test') {
            steps {
                sh '''
                chmod +x ./mvnw
                ./mvnw clean test
                '''
            }
        }
    }
}